<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url(https://kitt.lewagon.com/placeholder/cities/london);">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="header-flat-detail"></div>
        <div class="header-flat-owner">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle img-profil" %>
          <p><%= flat.name %></p>
        </div>
        <div class="header-flat-name">
          <h1><%= flat.description %></h1>
          <p><%= flat.city_name %></p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <form action="#">
        <h1 class="text-center">Create your account</h1>
        <div class="row">
          <div class="col-xs-6">
            <div class="form-group">
              <label for="first-name">Your first name</label>
              <input type="text" id="first-name" class="form-control" placeholder="Bob">
            </div>
          </div>
          <div class="col-xs-6">
            <div class="form-group">
              <label for="last-name">Your last name</label>
              <input type="text" id="last-name" class="form-control" placeholder="Sponge">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="email">Your email</label>
          <input type="email" class="form-control" placeholder="Bod@gmail.com">
        </div>
        <input type="submit" value="Sign Up" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>
<%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
<p><%= flat.name %></p>
<h1><%= flat.description %></h1>
<p><%= flat.city_name %></p>
